#!/bin/sh

set -ex

OS=$1
session=$2
scenefile=$3

if [ $OS == "Windows" ]; then
NGL_IPC=./ngl-ipc.exe
else
NGL_IPC=ngl-ipc
fi

shift 3
eval $@

host=${session%%-*}
port=${session##*-}

set -x

$NGL_IPC -x "$host"              \
        -p "$port"              \
        -f "$scenefile"         \
        -t "$duration"          \
        -a "$aspect_ratio"      \
        -r "$framerate"         \
        -c "$clear_color"       \
        -m "$samples"           \
