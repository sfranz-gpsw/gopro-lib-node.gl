#!/bin/sh

set -e

OS=$1
session=$2
ifile=$3
ofile=$4

if [ $OS == "Windows" ]; then
NGL_IPC=./ngl-ipc.exe
else
NGL_IPC=ngl-ipc
fi

host=${session%%-*}
port=${session##*-}

# Upload file only if it's not local
if [ "$host" = "localhost" ]; then
    echo "$ifile"
    exit 0
fi

set -x
$NGL_IPC -x "$host" -p "$port" -u "$ofile=$ifile"
